@model ProjectX.App.Models.Thought

<h3>Thought <a asp-action="GetSpecificThought" asp-route-id="@Model.Id">#@Model.Id</a></h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt.Humanize()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Views)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Views)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd class="col-sm-10">
            @foreach (var tag in Model.Tags.Split(Model.TagsDelimiter))
            {
                <span class="badge badge-dark">@tag.Trim()</span>
            }
        </dd>
    </dl>
</div>
